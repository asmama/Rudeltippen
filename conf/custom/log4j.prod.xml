<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="file" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="c:/zeus/logs/rudeltippenapp.log" />
		<param name="MaxFileSize" value="10MB" />
		<param name="MaxBackupIndex" value="10" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%5p %d{HH:mm:ss} - %m%n" />
		</layout>
	</appender>	

	<appender name="mail" class="org.apache.log4j.net.SMTPAppender">
		<param name="SMTPDebug" value="false" />
		<param name="BufferSize" value="1" />
		<param name="SMTPHost" value="mx.svenkubiak.de" />
		<param name="SMTPUsername" value="mailout@svenkubiak.de" />
		<param name="SMTPPassword" value="k4kBYezunYZnOGPGATGp" />
		<param name="From" value="mailout@svenkubiak.de" />
		<param name="To" value="sk@svenkubiak.com" />
		<param name="Subject" value="[ZEUS] Rudeltippen App - Error Notification" />
		<param name="threshold" value="error" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%5p %d{HH:mm:ss} - %m%n" />
		</layout>
	</appender>	

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %c{1} - %m%n" />
        </layout>
    </appender>

	<root>
		<priority value="info" />
		<appender-ref ref="console" />		
		<appender-ref ref="file" /> 
		<appender-ref ref="mail" />
	</root>

</log4j:configuration>